<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.0" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd">
    <context-param>
        <param-name>javax.faces.PROJECT_STAGE</param-name>
        <param-value>Development</param-value>
    </context-param>
    <servlet>
        <servlet-name>Faces Servlet</servlet-name>
        <servlet-class>javax.faces.webapp.FacesServlet</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>Faces Servlet</servlet-name>
        <url-pattern>*.xhtml</url-pattern>
        <url-pattern>/faces/*</url-pattern>
        <url-pattern>/protected/*</url-pattern>
        <url-pattern>/restricted/*</url-pattern>
        <url-pattern>/chef/*</url-pattern>
        <url-pattern>/driver/*</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>faces/index.xhtml</welcome-file>
    </welcome-file-list>
    <context-param>
        <description>
            If true, this will make the htm
            Default is 'true'
        </description>
        <param-name>org.apache.myfaces.PRETTY_HTML</param-name>
        <param-value>true</param-value>
    </context-param>
    <!--This constraint works as following:
        Protected pages are only accessable if you are a user
    -->
    <security-constraint>
        <web-resource-collection>
            <web-resource-name>Protected Pages</web-resource-name>
            <description/>
            <url-pattern>/faces/protected/*</url-pattern>
            <url-pattern>/protected/*</url-pattern>
        </web-resource-collection>
        <auth-constraint>
            <role-name>userNormal</role-name>
            <role-name>userCompany</role-name>
        </auth-constraint>
    </security-constraint>
    
    <security-constraint>
        <web-resource-collection>
            <web-resource-name>Restricted Pages</web-resource-name>
            <description/>
            <url-pattern>/faces/restricted/*</url-pattern>
            <url-pattern>/restricted/*</url-pattern>
        </web-resource-collection>
        <auth-constraint>
            <role-name>management</role-name>
        </auth-constraint>
    </security-constraint>
    
    <security-constraint>
        <web-resource-collection>
            <web-resource-name>Chef Pages</web-resource-name>
            <description/>
            <url-pattern>/faces/chef/*</url-pattern>
            <url-pattern>/chef/*</url-pattern>
        </web-resource-collection>
        <auth-constraint>
            <role-name>chef</role-name>
        </auth-constraint>
    </security-constraint>
    
    <security-constraint>
        <web-resource-collection>
            <web-resource-name>Driver Pages</web-resource-name>
            <description/>
            <url-pattern>/faces/driver/*</url-pattern>
            <url-pattern>/driver/*</url-pattern>
        </web-resource-collection>
        <auth-constraint>
            <role-name>driver</role-name>
        </auth-constraint>
    </security-constraint>
    
    <login-config>
        <auth-method>FORM</auth-method>
        <realm-name>loginRealm</realm-name>
        <form-login-config>
            <form-login-page>/Login.xhtml</form-login-page>
            <form-error-page>/Error.xhtml</form-error-page>
        </form-login-config>
    </login-config>
    <security-role>
        <description/>
        <role-name>userNormal</role-name>
    </security-role>
    <security-role>
        <role-name>management</role-name>
    </security-role>
    <security-role>
        <role-name>chef</role-name>
    </security-role>
    <security-role>
        <description/>
        <role-name>userCompany</role-name>
    </security-role>
</web-app>
